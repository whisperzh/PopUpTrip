<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/explorationSearchboxFragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.bignerdranch.android.popuptrip.ui.home.ExplorationStartDestFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_exploration_start_dest" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/explorationMapFragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:name="com.bignerdranch.android.popuptrip.ui.home.ExplorationMapFragment"
        app:layout_constraintTop_toBottomOf="@id/explorationSearchboxFragmentContainerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_exploration_map"/>

</androidx.constraintlayout.widget.ConstraintLayout>